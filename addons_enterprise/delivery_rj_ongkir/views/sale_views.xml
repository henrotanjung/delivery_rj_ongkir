<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_delivery_rj_ongkir" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.delivery.rj_ongkir</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="rj_ongkir_bill_my_account" invisible="1"/>
                <field name="rj_ongkir_carrier_account" attrs="{'invisible': [('rj_ongkir_bill_my_account', '!=', True)], 'required':[('rj_ongkir_bill_my_account', '!=', False)]}"/>
                <field name="rj_ongkir_service_type" attrs="{'invisible': [('rj_ongkir_bill_my_account', '!=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
